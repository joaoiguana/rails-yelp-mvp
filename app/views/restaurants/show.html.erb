<h2><%= @restaurant.name %></h2>
<p><%= @restaurant.address %></p>
<h6><%= @restaurant.category.capitalize %></h6>

<h5>Reviews</h5>
<% reviews = @restaurant.reviews %>
<% reviews.each do |review| %>
<p><%= review.content %></p>
<p>Rating: <%= review.rating %> stars.</p>
<% end %>

<%= link_to "Add a review", new_restaurant_review_path(@restaurant.id), :type=>"button", :class=>"btn btn-outline-success" %>
